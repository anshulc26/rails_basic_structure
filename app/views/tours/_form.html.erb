<%= form_for tour do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %><br/>

  <%= f.label :location %>
  <%= f.text_field :location, required: true %><br/>

  <%= f.label :start_date %>
  <%= f.date_field :start_date, required: true %><br/>

  <%= f.label :photos %>
  <%= f.file_field :photos, multiple: true, required: tour.photos.blank? %><br/>

  <%= f.label :description %>
  <%= f.text_area :description, required: true %><br/>

  <%= f.submit %>
<% end %>
